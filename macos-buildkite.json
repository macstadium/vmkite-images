{
  "builders": [
    {
      "type": "vmware-vmx",
      "source_path": "{{user `vmx_path`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "shutdown_command": "echo '{{user `username`}}'|sudo -S shutdown -h now",
      "output_directory": "{{user `packer_output_dir`}}"
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp/vmkite/com.macstadium.vmkite-buildkite-agent.plist",
      "source": "scripts/buildkite/support/com.macstadium.vmkite-buildkite-agent.plist",
      "type": "file"
    },
    {
      "destination": "/tmp/vmkite/vmkite-buildkite-agent.sh",
      "source": "scripts/buildkite/support/vmkite-buildkite-agent.sh",
      "type": "file"
    },
    {
      "execute_command": "chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}",
      "scripts": [
        "scripts/buildkite/agent.sh"
      ],
      "environment_vars": [],
      "type": "shell"
    }
  ],
  "post-processors": [{
    "type" : "vsphere",
    "keep_input_artifact" : "true",
    "datacenter" : "MacStadium - Vegas",
    "cluster" : "XSERVE_Cluster",
    "datastore" : "PURE1-1",
    "host" : "10.92.157.10",
    "password" : "{{user `vsphere_password`}}",
    "username" : "{{user `vsphere_username`}}",
    "vm_folder": "/",
    "disk_mode": "thin",
    "vm_name": "macOS-{{user `osx_version`}}-buildkite-{{user `build_number`}}",
    "vm_network": "dvPortGroup-Private-1",
    "insecure" : "true"
  }],
  "variables": {
    "osx_version": "",
    "build_number": "dev",
    "vmx_path": "",
    "username": "vagrant",
    "password": "vagrant",
    "vsphere_username": "",
    "vsphere_password": "",
    "packer_headless": "true",
    "packer_output_dir": "output/buildkite-macos"
  }
}