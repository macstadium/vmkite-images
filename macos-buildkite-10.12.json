{
  "builders": [
    {
      "type": "vmware-vmx",
      "source_path": "{{user `source_path`}}",
      "ssh_username": "vmkite",
      "ssh_password": "vmkite",
      "shutdown_command": "echo 'vmkite'| sudo -S shutdown -h now",
      "skip_compaction": true,
      "headless": "{{ user `headless` }}",
      "vm_name": "{{user `vm_name`}}",
      "vnc_bind_address": "{{user `vnc_bind_address`}}",
      "output_directory": "{{user `output_directory`}}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "ehci.present": "TRUE",
        "firmware": "efi",
        "hpet0.present": "TRUE",
        "ich7m.present": "TRUE",
        "keyboardAndMouseProfile": "macProfile",
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}",
        "smc.present": "TRUE",
        "usb.present": "TRUE",
        "ethernet0.virtualDev": "e1000e"
      }
    }
  ],
  "provisioners": [
    {
      "destination": "/Users/vmkite/com.macstadium.vmkite-buildkite-agent.plist",
      "source": "scripts/macos/support/com.macstadium.vmkite-buildkite-agent.plist",
      "type": "file"
    },
    {
      "destination": "/Users/vmkite/vmkite-buildkite-agent.sh",
      "source": "scripts/macos/support/vmkite-buildkite-agent.sh",
      "type": "file"
    },
    {
      "type": "shell-local",
      "command": "echo testing; set -x; mkdir -p toupload; echo tar cvf toupload/xcode.tar /Applications/Xcode-{{user `xcode_version`}}.app; ls -al"
    },
    {
      "environment_vars": [
        "HOME_DIR=/Users/vmkite",
        "USERNAME=vmkite",
        "PASSWORD=vmkite",
        "FASTLANE_USER={{user `fastlane_user`}}",
        "FASTLANE_PASSWORD={{user `fastlane_password`}}",
        "XCODE_VERSION={{user `xcode_version`}}"
      ],
      "execute_command": "chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}",
      "scripts": [
        "scripts/macos/buildkite.sh",
        "scripts/macos/xcode.sh",
        "scripts/macos/shrink.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "cpus": "1",
    "disk_size": "20480",
    "memory": "4096",
    "headless": "",
    "source_path": "",
    "vm_name": "macos-buildkite-10.12.3-r{{env `BUILDKITE_BUILD_NUMBER`}}",
    "output_directory": "output",
    "vnc_bind_address": "0.0.0.0",
    "fastlane_user": "{{env `FASTLANE_USER`}}",
    "fastlane_password": "{{env `FASTLANE_PASSWORD`}}",
    "xcode_version": "8.3.2"
  }
}