{
  "builders": [
    {
      "type": "vmware-vmx",
      "source_path": "{{user `source_path`}}",
      "ssh_username": "vmkite",
      "ssh_password": "vmkite",
      "shutdown_command": "echo 'vmkite'| sudo -S shutdown -h now",
      "headless": "{{ user `headless` }}",
      "vm_name": "{{user `vm_name`}}",
      "vnc_bind_address": "{{user `vnc_bind_address`}}",
      "vnc_disable_password": true,
      "output_directory": "{{user `output_directory`}}",
      "vmx_data_post": {
        "guestinfo.vmkite-buildkite-agent-token": "xxx",
        "guestinfo.vmkite-buildkite-api-token": "xxx",
        "guestinfo.vmkite-buildkite-org": "xxx",
        "guestinfo.vmkite-source-datastore": "1TB - SSD",
        "guestinfo.vmkite-target-datastore": "1TB - SSD",
        "guestinfo.vmkite-cluster-path": "",
        "guestinfo.vmkite-vm-memory": "4096",
        "guestinfo.vmkite-vm-network-label": "VMNetwork",
        "guestinfo.vmkite-vm-num-cpus": "2",
        "guestinfo.vmkite-vm-path": "",
        "guestinfo.vmkite-vsphere-host": "",
        "guestinfo.vmkite-vsphere-user": "",
        "guestinfo.vmkite-vsphere-pass": "",
        "guestinfo.vmkite-vsphere-insecure": "true"
      }
    }
  ],
  "provisioners": [
    {
      "destination": "/home/vmkite/vmkite-wrapper.sh",
      "source": "scripts/ubuntu/support/vmkite-wrapper.sh",
      "type": "file"
    },
    {
      "destination": "/home/vmkite/vmkite.service",
      "source": "scripts/ubuntu/support/vmkite.service",
      "type": "file"
    },
    {
      "environment_vars": [
        "HOME_DIR=/home/vmkite"
      ],
      "execute_command": "echo 'vmkite' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "scripts": [
        "scripts/ubuntu/vmkite.sh",
        "scripts/ubuntu/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "headless": "",
    "source_path": "",
    "vm_name": "vmkite-r{{env `BUILDKITE_BUILD_NUMBER`}}",
    "output_directory": "output",
    "vnc_bind_address": "127.0.0.1"
  }
}